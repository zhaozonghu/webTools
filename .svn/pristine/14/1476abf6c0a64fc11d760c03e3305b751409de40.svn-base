/*--------------全站公用样式 start--------------*/
*{margin: 0; padding: 0; border: 0}
ul, ol{list-style: none}
img{display: block}
span, em, i, label{font-style: normal;display: inline-block}
table{border-collapse: collapse; border-spacing: 0}
td, th{padding: 0}
textarea,input{outline: 0;font-family: Microsoft YaHei}
body{background-color: #FFF; font-family: Microsoft YaHei, Helvetica Neue, Helvetica, Roboto, Heiti SC, STHeiTi, Arial, sans-serif; font-size: 14px; line-height: 1; color: #333;min-width: 1000px}
a{color: #222; text-decoration: none;display: inline-block;}
a:hover{color: #0283ec; text-decoration: underline}

.clearfix:before, .clearfix:after{content: " "; display: table; clear: both}
.text-overflow{white-space: nowrap; overflow: hidden}
.text-ellipsis{overflow: hidden; text-overflow: ellipsis; white-space: nowrap}

.header{width: 1380px;margin: 0 auto;position: relative;}

/*--头部--*/
.header a:hover{ color: #0283ec; text-decoration: none}
.header .t{height: 42px;width: 100%;float: left;margin: 20px 0}

/*--搜索--*/
.header .ser{width: 400px; height: 32px; float: left; margin: 5px 0 0 150px; position: relative; background: rgba(0,0,0,.2); border-radius: 8px;}
.header .ser_kws{width: 300px; height: 32px; background:none; margin-left: 15px; float: left;}
.header .ser_btn{width: 60px; height: 32px; color: #fff; float: right; cursor: pointer; background: #0283ec url(../images/v_icons.png) 18px -577px no-repeat; border-radius: 0 8px 8px 0;}
.header .ser_btn:hover{background-color:#297df0}
.header .ser_list{display: none; position: absolute; top: 31px; left: 15px; z-index: 99; width: 320px; background: rgba(255,255,255,.9); border:1px solid #e5e5e5; box-shadow: 2px 2px 2px rgba(0,0,0,.2);}
.header .ser_list a{height: 34px; line-height: 34px; display: block; overflow: hidden; color: #333; padding: 0 15px; text-align: left;}
.header .ser_list a span{color: #9a9a9a; cursor: pointer; font-size: 12px;}
.header .ser_list a:hover em{color: #297df0; text-decoration: underline;}
.header .ser_list a.hover{background: #eee}
